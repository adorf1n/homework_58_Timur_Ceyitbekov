@model Product

<h2>@Model.Name</h2>

<div>
    <img src="@Model.ImagePath" alt="Изображение товара" style="max-width: 400px; max-height: 400px;" />
</div>

<p><strong>Цена:</strong> @Model.Price</p>
<p><strong>Категория:</strong> @Model.Category?.Name</p>
<p><strong>Бренд:</strong> @Model.Brand?.Name</p>
<p><strong>Дата добавления:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>

<a asp-action="Index" class="btn btn-secondary">Назад</a>
